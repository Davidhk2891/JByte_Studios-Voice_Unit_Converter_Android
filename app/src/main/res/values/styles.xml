<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  No action bar  -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--  Screen titles in white  -->
    <style name="screen_titles_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_two</item>
        <item name="android:textSize">@dimen/text_size_26</item>
    </style>

    <!-- Popup menu style -->
    <style name="PopupMenuTheme" parent="android:Widget.PopupMenu">
        <item name="android:background">@drawable/pp_menu_background</item>
    </style>


</resources>
